@model UsuarioModel

<style>
    .header-company-lp {
  background-color: #FCFDF9;
  padding: 15px 30px;
  border-bottom: 1px solid #e0e0e0;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.logo-link {
  display: block;
}

.company-logo {
  height: 100px;
  width: auto;
}

.main-nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  gap: 25px;
}

.main-nav ul li a {
  color: #06C978;
  text-decoration: none;
  font-weight: 500;
  padding: 8px 12px;
  border-radius: 5px;
  transition: background-color 0.3s ease, color 0.3s ease;
  display: flex;
  align-items: center;
  cursor: pointer;
}

.main-nav ul li a i {
  margin-right: 8px;
  font-size: 1.1em;
}

.main-nav ul li a:hover {
  background-color: #e6f0ff;
  color: #003d7a;
}
</style>

<a asp-controller="Home" asp-action="Index" class="logo-link">
        <img src=" /Imagens/Zardon.png" alt="Logo Zardon" class="company-logo">
    </a>
    <nav class="main-nav">
        <ul>
            @if(Model.Perfil == Inova.Enums.PerfilEnum.Admin)
            {
                <li>
                    <a asp-controller="Tabela" asp-action="Tabela"
                        class="menu-btn @(ViewContext.RouteData.Values["controller"].ToString() == "Tabela" ? "active" : "")">
                        Tabela
                    </a>
                </li>
                <li>
                    <a asp-controller="Usuario" asp-action="TabelaUsuarios"
                        class="menu-btn @(ViewContext.RouteData.Values["controller"].ToString() == "Usuario" ? "active" : "")">
                        Usu√°rios
                    </a>
                </li>
            }
            <li>
                <a asp-controller="Login" asp-action="Sair" class="menu-btn">
                    Sair
                </a>
            </li>
        </ul>
    </nav>