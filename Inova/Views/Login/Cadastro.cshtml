@using Inova.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "_LayoutTelaDeLogin";
}




<link rel="stylesheet" href="~/css/cadastro.css">

        <a asp-controller="Login" asp-action="IndexDeslogada" class="back-home">
            <i class="fas fa-arrow-left"></i>
            Voltar ao Site
        </a>

    <div class="register-container">
        <div class="register-header">
            <div class="logo">
                <i class="fas fa-user-plus"></i>
            </div>
            <h1>Criar Conta</h1>
            <p>Cadastre-se para acessar o site</p>
        </div>

            <form asp-controller="Usuario" asp-action="Criar2" method="post">

                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">Nome</label>
                        <div class="input-wrapper">
                            <i class="fas fa-user"></i>
                            <input type="text" asp-for="Nome" class="form-control" id="itemName" placeholder="Ex: João da Silva" required>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="finderName" class="form-label">Login</label>
                        <div class="input-wrapper">
                            <input type="text" asp-for="Login" class="form-control" id="finderName" placeholder="Digite o login do usuário" required>
                            <i class="fa-regular fa-user"></i>
                        </div>
                </div>

                <div class="form-group">
                    <label for="contactEmail" class="form-label">Email para Contato</label>
                    <div class="input-wrapper">
                        <input type="email" asp-for="Email" class="form-control" id="contactEmail" placeholder="seuemail@exemplo.com" required>
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label for="phone">Telefone</label>
                    <div class="input-wrapper">
                        <input type="tel" asp-for="Celular" class="form-control" id="contactNumber" placeholder="(XX) XXXXX-XXXX" required>
                        <i class="fas fa-phone"></i>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="userProfile" class="form-label">Perfil</label>
                    <select asp-for="Perfil" name="Perfil" id="userProfile" class="form-select" required>
                        <option selected value="@PerfilEnum.Padrao">Perfil do Usuário</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Perfil, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="password">Senha</label>
                    <div class="input-wrapper">
                        <input type="password" asp-for="Senha" class="form-control" id="password" placeholder="Digite a senha do usuário" required>
                        <i class="fas fa-lock"></i>
                        <i class="fas fa-eye password-toggle" id="toggle-password"></i>
                    </div>
                </div>

                <button type="submit" class="register-button" id="register-btn">
                    <i class="fas fa-user-plus"></i>
                    Criar Conta
                </button>
            </form>

            <div class="divider">
                <span>ou</span>
            </div>

            <div class="login-link">
                <p>Já tem uma conta? <a asp-controller="Login" asp-action="Login">Faça login aqui</a></p>
            </div>
        </div>
    </div>